					<Color r="0.31373" g="0.627451" b="1.0"/>
				</Texture>
			</Layer>
		</Layers>
		
		<Scripts>
			<OnLoad>
				CollectionsSpellButton_OnLoad(self, ManuscriptsJournal_UpdateButton)
